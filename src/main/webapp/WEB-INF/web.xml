<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">



<web-app >

  <display-name>Devoir Photo</display-name>

<description>Application correspondant au devoir 1 de GTI 525. </description>


<servlet>
		<servlet-name>AjaxServlet</servlet-name>
		<servlet-class>ca.etsmtl.gti525.devoir1</servlet-class>
	</servlet>

<servlet>
		<servlet-name>WatermarkServlet</servlet-name>
		<servlet-class>ca.etsmtl.gti525.devoir1</servlet-class>
	</servlet>

  
<servlet-mapping>
		<servlet-name>WatermarkServlet</servlet-name>
		<url-pattern>/WatermarkServlet</url-pattern>
	</servlet-mapping>

  
<servlet-mapping>
		<servlet-name>AjaxServlet</servlet-name>
		<url-pattern>/AjaxServlet</url-pattern>
	</servlet-mapping>

  
<error-page>
	  <error-code>404</error-code>
	  <location>/error.jsp</location>
  </error-page>
  
 <welcome-file-list>  
<welcome-file>/index.jsp</welcome-file> 
</welcome-file-list>
  
  </web-app>
